@model CRMManager.Models.CardTransactionViewModel

@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">@Model.PageTitle</h2>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3 col-4">
                                <label asp-for="FullName" class="control-label"></label>
                            </div>
                            <div class="col-lg-5 col-8">
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @*<img src="~/img/Avatar/Default.png" />*@
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3 col-4">
                                <label asp-for="MemID" class="control-label"></label>
                            </div>
                            <div class="col-lg-3 col-6">
                                <input asp-for="MemID" class="form-control" />
                                <span asp-validation-for="MemID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3 col-4">
                                <label asp-for="BillNo" class="control-label"></label>
                            </div>
                            <div class="col-lg-4 col-8">
                                <input asp-for="BillNo" class="form-control" />
                                <span asp-validation-for="BillNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3 col-4">
                                <label asp-for="BillDate" class="control-label"></label>
                            </div>
                            <div class="col-lg-4 col-6">
                                <input type="date" asp-for="BillDate" class="form-control datepicker" />
                                <span asp-validation-for="BillDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3 col-4">
                                <label asp-for="BillTotal" class="control-label"></label>
                            </div>
                            <div class="col-lg-4 col-6">
                                <input asp-for="BillTotal" class="form-control" />
                                <span asp-validation-for="BillTotal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end crud-button ">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <input type="button" value="Hủy" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
