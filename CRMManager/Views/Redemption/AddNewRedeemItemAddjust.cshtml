@model CRMManager.Models.RedeemItemAddjustViewModel
<div class="container">
    <form enctype="multipart/form-data" method="post" class="m-2">
        <div class="form-group d-none">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group mb-2">
                    <label class="control-label">Chọn quà</label>
                    <select id="drpEmpList" class="form-select" asp-for="ItemID" asp-items="@(new SelectList(Model.RedeemItems, "ID", "ItemName"))">
                        <option value="">--Select--</option>
                    </select>
                    <input type="hidden" asp-for="ItemID" />
                </div>
                <div class="form-group">
                    <label class="control-label">Số lượng</label>
                    <input asp-for="Qty" class="form-control" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-8">

                    </div>
                    <div class="col-4">
                        <div class="float-right mt-2">
                            <button type="submit" asp-area="" asp-controller="Redemption" asp-action="AddNewRedeemItemAddjust" asp-route-id= class="btn btn-success m-1 float-right"><i class="far fa-save"></i> Lưu</button>
                            <a asp-area="" asp-controller="Redemption" asp-action="RedeemItemAddjust" asp-route-id= class="btn btn-danger m-1 float-right"><i class="far fa-trash-alt"></i> Hủy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>