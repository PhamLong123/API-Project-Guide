@model CRMManager.Models.RedemptionGroupsViewModel
<div class="mt-4 justify-content-center">
    <h2 class="text-center">@Model.PageTitle</h2>
</div>
<form method="post">
    <div class="ml-5 mr-5 mt-4">
        <div class="row mt-2">
            <div class="col-12">
                <div class="form-inline">
                    <div class="row">
                        <div class="col-12">
                            <div class="row mb-2">
                                <div class="col-3"></div>
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-9">
                                            <input class="form-control mr-sm-2" type="search" placeholder="Từ khóa tìm kiếm" aria-label="Search">
                                        </div>
                                        <div class="col-3">
                                            <button class="btn btn-primary my-2 my-sm-0 w-100" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </div>
                        <div class="col-12">
                            <a asp-area="" asp-controller="Redemption" asp-action="AddNewGroup" class="btn btn-success float-right m-1"><i class="far fa-plus-square"></i> Thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*background-color: #4267B2;*@
        <table id="table-data" class="table table-bordered table-hover table-apptech mt-4 w-100" border="1">
            <thead>
                <tr class="bg-primary" style="color: White;">
                    <td style="width:15%;"><b>Mã</b></td>
                    <td style="width:20%;"><b>Tên</b></td>
                    <td style="width:40%;"><b>Mô tả</b></td>
                    <td style="width:25%;"><b>Tùy chọn</b></td>
                </tr>
            </thead>
            @foreach (var item in Model.RedemptionGroups)
            {
                <tr id="controlRow" runat="server" class="apptech-pull-up">
                    <td>
                        <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                            @item.Number
                        </div>
                    </td>
                    <td>
                        <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                            @item.Name
                        </div>
                    </td>
                    <td>
                        <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                            @item.Description
                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <a asp-area="" asp-controller="Redemption" asp-action="EditGroup" asp-route-id=@item.ID class="btn btn-success m-1 ms-4"><i class="far fa-edit"></i> Sửa</a>
                            </div>
                            <div class="col-12 col-md-6">
                                <button type="submit" asp-area="" asp-controller="Redemption" asp-action="DeleteGroup" asp-route-id= class="btn btn-danger m-1 ms-4"><i class="far fa-trash-alt"></i> Xóa</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</form>