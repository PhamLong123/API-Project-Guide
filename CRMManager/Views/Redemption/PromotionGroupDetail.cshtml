@model IEnumerable<CRMManager.Models.PromotionGroupDetailViewModel>
<form method="post">
    <div class="ml-5 mr-5 mt-4">
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row">
                    <div class="col-6">

                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Redemption" asp-action="AddGiftToPromotionGroupDetail" asp-route-id=@ViewBag.GroupID class="btn btn-success float-right m-1"><i class="fas fa-gift"></i> Thêm quà</a>
                    </div>
                </div>
                <table id="table-data" class="table table-bordered table-hover table-apptech mt-4 w-100" border="1">
                    <thead>
                        <tr style="color: White; background-color: #4267B2;">
                            <td style="width:30%;"><b>Mã nhóm quà</b></td>
                            <td style="width:35%;"><b>Tên quà</b></td>
                            <td style="width:35%;"><b>Số lượng</b></td>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        foreach (var item2 in ViewBag.RedeemItemMall)
                        {
                            if (item.ItemID == item2.ID) { 
                                <tr id="controlRow" runat="server" class="apptech-pull-up">
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item.ItemNumber
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item2.ItemName
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item.Qty
                                </div>
                            </td>
                        </tr>
                            }
                        }
                    }
                </table>
            </div>
            
        </div>

    </div>
</form>