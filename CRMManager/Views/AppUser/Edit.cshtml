@model CRMManager.Models.AppUserViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = Model.PageTitle;
}
<h2 class="page-title">@Model.PageTitle</h2>
<hr />
<div class="row">
    <div class="col-12">
        @*<p style="font-size: 18px;">Tên ứng dụng: <b>@Model.SelectedAppName</b></p>
        <p style="font-size: 18px;">Tên vai trò: <b>@Model.SelectedRoleName</b></p>*@
        <form asp-action="AppUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.ID)
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 col-4">
                                <label asp-for="UserID" class="control-label"></label><span class="text-danger"> (*)</span>
                            </div>
                            <div class="col-md-9 col-8">
                                <input asp-for="UserID" class="form-control w-lg-50" />
                                <span asp-validation-for="UserID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-4">
                                <label asp-for="Name" class="control-label"></label>   <span class="text-danger">(*)</span>
                            </div>
                            <div class="col-lg-10 col-md-9 col-8">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 col-4">
                                <label asp-for="Pwd" class="control-label"></label>   <span class="text-danger">(*)</span>
                            </div>
                            <div class="col-md-9 col-8">
                                <input asp-for="Pwd" type="password" class="form-control" />
                                <span asp-validation-for="Pwd" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-4">
                                <label asp-for="Description" class="control-label"></label>
                            </div>
                            <div class="col-lg-10 col-md-9 col-8">
                                <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h4 class="pt-2 pb-2">
                @*<label asp-for="AppRoles" class="control-label"></label>*@
            </h4>
            <table id="table-data" class="table align-middle mt-3 mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th width="30%">Role</th>
                        <th width="50%">Description</th>
                        <th width="20%"></th>
                    </tr>
                </thead>
                
            </table>
            <div class="form-group d-flex justify-content-end crud-button ">
                <input type="submit" value="Lưu" asp-action="Save" class="btn btn-success" />
                <input type="button" value="Hủy" class="btn btn-danger" onclick="location.href = '@Url.Action("Index", "AppUser")'" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
