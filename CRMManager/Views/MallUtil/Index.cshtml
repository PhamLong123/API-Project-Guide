@model CRMManager.Models.MallUtilsViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}
<div class="mt-4 justify-content-center">
    <h2 class="text-center">@Model.PageTitle</h2>
    <input type="hidden" asp-for="PageTitle" />
</div>
<form method="post">
    <div class="row">
        <div class="row">
            <div class="col-md-12 ">
                @*border-end*@
                <div class="row mt-2">
                    <div class="col-12">
                        <div class="form-inline">
                            <div class="row">
                                <div class="col-12 d-none">
                                    <div class="row mb-2">
                                        <div class="col-3"></div>
                                        <div class="col-6">
                                            <div class="row">
                                                <div class="col-9">
                                                    <input asp-for="KeySearch" class="form-control mr-sm-2" type="search" placeholder="Từ khóa tìm kiếm" aria-label="Search">
                                                </div>
                                                <div class="col-3">
                                                    <button class="btn btn-primary my-2 my-sm-0 w-100" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3"></div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" asp-area="" asp-controller="MallUtil" asp-action="ImportToExcel" asp-route-id=@Model class="btn btn-excel m-1 float-right d-none"><i class="far fa-file-excel"></i> Nhập dữ liệu từ Excel</button>
                                    <button class="btn btn-success float-right m-1" asp-controller="MallUtil" asp-action="AddNew"><i class="far fa-plus-square"></i> Thêm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="table-data" class="table table-hover table-bordered">
                    <thead class="bg-primary" style="color:white">
                        <tr>
                            <th scope="col" width="20%">Mã</th>
                            <th scope="col" width="20%">Tên</th>
                            <th scope="col" width="45%">Mô tả</th>
                            <th width="15%">Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.BaseMallUtils != null)
                        {
                            @foreach (var item in Model.BaseMallUtils)
                            {
                                <tr id="controlRow" @*onclick="location.href = '@Url.Action("Details", "BusinessCategory", new { id=item.ID})'"*@>
                                    <th scope="row">@item.Number</th>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <div class="crud-button align-center mb-3">
                                            <a class="btn btn-primary" asp-controller="MallUtil" asp-action="Edit" asp-route-number="@item.Number"><i class="far fa-edit"></i> Sửa</a>
                                            <button class="btn btn-danger d-none" data-bs-toggle="modal" data-bs-target="#myModal-@item.ID"><i class="far fa-trash-alt d-none"></i> Xóa</button>
                                        </div>
                                    </td>
                                </tr>
                                <div class="modal fade" id="myModal-@item.ID">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Xóa ngành hàng</h4>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <div class="mt-4 justify-content-center">
                                                    <p class="text-center">Bạn có muốn xóa ngành hàng @item.Name không ?</p>
                                                </div>
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="submit" asp-area="" asp-controller="MallUtil" asp-action="Delete" asp-route-id= class="btn btn-success" data-bs-dismiss="modal">Đồng ý</button>
                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Từ chối</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
<style>
    #table-data_wrapper .row div {
        margin-top: 0px !important;
    }

    div.dataTables_scrollBody {
        border-left: none !important;
    }
</style>