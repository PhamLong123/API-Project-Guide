                                            <div class="form-group mt-2">
                                                <label class="control-label">Số lượng</label>
                                                <input class="form-control" />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <a asp-area="" asp-controller="PromotionCode" asp-action="AddNewCode" class="btn btn-success m-1" style="margin-top: 33px !important"><i class="far fa-plus-square"></i> Sinh mã quà</a>
                                        </div>
                                    </div>
                                </fieldset>
                                
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="col-12">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="import" style="margin-top: 15px !important">
                                <label class="form-check-label" style="margin-top: 15px !important">
                                    Nhập mã:
                                </label>
                            </div>
                            <div class="col-12">
                                <fieldset id="importfield" style="margin-top:25px;" disabled>
