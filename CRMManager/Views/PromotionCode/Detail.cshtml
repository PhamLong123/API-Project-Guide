                                    <select id="drpEmpList" class="form-select" style="height:35px!important">
                                        <option value="">Voucher</option>
                                        <option value="">Coupon</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group mt-2">
                                    <label class="control-label">Đơn vị phát hành</label>
                                    <input class="form-control" />
                                    @*<input asp-for="Publisher" class="form-control" />
                                    <span asp-validation-for="Publisher" class="text-danger"></span>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group mt-2">
                            <label class="control-label">Mã</label>
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="control-label">Từ ngày</label>
                            <input asp-for="DistributedDate" class="form-control" />
                            <span asp-validation-for="DistributedDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group mt-2">
                            <label class="control-label">Tên</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="control-label">Đến ngày</label>
                            <input asp-for="CreatedDate" class="form-control" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group mt-2">
                            <label class="control-label">Nội dung</label>
                            <textarea asp-for="TC" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="TC" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12  col-md-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Mã giảm giá bên ngoài
                            </label>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="row">
                            <div class="col-12">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="generate" style="margin-top: 15px !important" checked>
