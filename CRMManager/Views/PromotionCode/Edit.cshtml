@model CRMManager.Models.PromotionCodeViewModel
<div class="justify-content-center">
    <h2 class="text-center">SỬA THÔNG TIN CHƯƠNG TRÌNH KHUYẾN MÃI</h2>
</div>
<div class="container">
    <form enctype="multipart/form-data" method="post" class="m-2">
        <div class="form-group d-none">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="card w-100">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group mt-2">
                            <label class="control-label">Mã</label>
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="control-label">Tên</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="control-label">Ngày tạo</label>
                            <input asp-for="CreatedOn" class="form-control" />
                            <span asp-validation-for="CreatedOn" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="control-label">Ngày phát hành</label>
                            <input asp-for="ReleaseDate" class="form-control" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group mt-2">
                            <div class="row">
                                <div class="col-12">
                                    <label class="control-label" for="ThumbImage">Hình ảnh </label>
                                </div>
                                <div class="col-12">
                                    <img src="~/Dat'sImages/Default/imagesul.png" class="img-thumbnail" style="height: 223px;"/>
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-8">
                                    <input type="file" class="form-control" name="imgfile" />
                                </div>
                                <div class="col-4">
                                    <button type="submit" asp-area="" asp-controller="PromotionCode" asp-action="Uploadimage" class="btn btn-primary">Upload Ảnh</button>
                                </div>
                                <span>@ViewData["Message"]</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group mt-2">
                            <label class="control-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12  col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Phần trăm giảm giá
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Số tiền giảm giá
                            </label>
                        </div>
                    </div>
                    <div class="col-12">
                        <a asp-area="" asp-controller="PromotionCode" asp-action="AddNewCode" class="btn btn-success float-right m-1"><i class="far fa-plus-square"></i> Sinh mã quà</a>
                        <button type="submit" asp-area="" asp-controller="PromotionCode" asp-action="ImportFromExcel" asp-route-id=@Model class="btn btn-success m-1 float-right"><i class="far fa-file-excel"></i> Nhập dữ liệu từ Excel</button>
                    </div>
                    <div class="col-12">
                        <table id="table-data" class="table table-bordered table-hover table-apptech mt-4 w-100" border="1">
                            <thead>
                                <tr class="bg-primary" style="color: White;">
                                    <td style="width:15%;"><b>Mã giảm giá</b></td>
                                    <td style="width:30%;"><b>Ngày phát hành</b></td>
                                    <td style="width:20%;"><b>Ngày gửi</b></td>
                                    <td style="width:20%;"><b>Đối tượng gửi</b></td>
                                    <td style="width:15%;"><b>Chọn mã</b></td>
                                </tr>
                            </thead>
                            <tr id="controlRow" runat="server" class="apptech-pull-up">
                                <td>
                                    <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">

                                    </div>
                                </td>
                                <td>
                                    <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">

                                    </div>
                                </td>
                                <td>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" style=" margin-left: 29%">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
