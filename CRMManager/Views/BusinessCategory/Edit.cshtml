@model CRMManager.Models.BusinessCategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2 class="page-title">@Model.PageTitle</h2>
<hr />


<div class="row">
    <form asp-action="SaveEdit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6 border-end">
                <div class="row">
                    <div class="col-md-6 mt-2">
                        <input asp-for="ID" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Number" class="control-label"></label>
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 mt-2">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 mt-2">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IsShowMobileApp" type="checkbox" id="flexCheckDefault">
                                <label class="form-check-label" asp-for="IsShowMobileApp" for="flexCheckDefault"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input id="imgInput" type="file" asp-for="@Model.Icon" value="@Model.Icon" class="form-control" accept="image/png, image/gif, image/jpeg" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                    <img id="imgPreview" src="#" width="150" height="150" />
                </div>
            </div>
        </div>
        <div class="form-group d-flex justify-content-end crud-button ">
            <input type="submit" value="Lưu" class="btn btn-success" />
            <input type="button" value="Hủy" class="btn btn-danger" onclick="location.href = '@Url.Action("Index", "BusinessCategory")'" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/general.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
