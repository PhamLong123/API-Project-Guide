@{
}
@model CRMManager.Models.CLPViewModel
<div class="container">
    <form method="post" class="m-2">
        <div class="form-group d-none">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">

                <div class="form-group">
                    <label class="control-label">Tên chương trình</label>
                    <input asp-for="ProgName" class="form-control" />
                    <span asp-validation-for="ProgName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Mô tả ngắn</label>
                    <input asp-for="ShortDesc" class="form-control" />
                    <span asp-validation-for="ShortDesc" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label">Từ ngày</label>
                    <input type="date" asp-for="FromDate" class="form-control " />
                    <span asp-validation-for="FromDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Đến ngày</label>
                    <input type="date" asp-for="ToDate" class="form-control" />
                    <span asp-validation-for="ToDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-8">

                    </div>
                    <div class="col-4">
                        <div class="float-right mt-2">
                            <button type="submit" asp-area="" asp-controller="CLP" asp-action="AddNew" asp-route-id= class="btn btn-success m-1 float-right"><i class="far fa-save"></i> Lưu</button>
                            <a asp-area="" asp-controller="CLP" asp-action="Index" asp-route-id= class="btn btn-danger m-1 float-right"><i class="far fa-trash-alt"></i> Hủy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>