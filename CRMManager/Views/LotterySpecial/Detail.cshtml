@model CRMManager.Models.LotterySpecialResultViewModel
<div class="container">
    <form enctype="multipart/form-data" method="post" class="m-2">
        <div class="form-group d-none">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        @foreach (var item in Model.Customers)
        {
            if (Model.MemID == item.MemID)
            {
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label">Mã thành viên</label>
                            <input value="@item.MemID" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input value="@item.Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Điện thoại di động</label>
                            <input value="@item.Mobile" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Họ tên</label>
                            <input value="@item.FullName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổng tiền giao dịch</label>
                            <input value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mã tham gia</label>
                            <input value="" class="form-control" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label">Mã quà</label>
                            <input value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tên quà</label>
                            <input value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Lượt quay</label>
                            <input value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ngày giao dịch</label>
                            <input asp-for="TransDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mã Bill</label>
                            <input asp-for="BillID" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cửa hàng</label>
                            <input value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ngày nhận</label>
                            <input asp-for="TakeDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-8">

                            </div>
                            <div class="col-4">
                                <div class="float-right mt-2">
                                    <a asp-area="" asp-controller="LotterySpecial" asp-action="Result" asp-route-id= class="btn btn-success m-1 float-right"><i class="fas fa-undo"></i> Quay lại</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </form>
</div>