@model CRMManager.Models.LotterySpecialProgramsViewModel
<form method="post">
    <div class="ml-5 mr-5 mt-4">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">
                        
                    </div>
                </div>
            </div>
            <div class="col-6">
                <a asp-area="" asp-controller="LotterySpecial" asp-action="AddNewProgram" class="btn btn-success float-right m-1"><i class="far fa-plus-square"></i> Thêm</a>
            </div>
        </div>
        <table id="table-data" class="table table-bordered table-hover table-apptech mt-4 w-100" border="1">
            <thead>
                <tr style="color: White; background-color: #4267B2;">
                    <td style="width:40%;"><b>Tên Trương trình</b></td>
                    <td style="width:35%;"><b>Trạng thái</b></td>
                    <td style="width:25%;"><b>Tùy chọn</b></td>
                </tr>
            </thead>
            @foreach (var item in Model.LotterySpecialPrograms)
            {
                <tr id="controlRow" runat="server" class="apptech-pull-up">
                    <td>
                        <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                            @item.Name
                        </div>
                    </td>
                    <td>
                        <div class="d-block w-100 h-100 text-decoration-none text-danger p-10px">
                            @if (item.From == DateTime.Now)
                            {
                                <span>Hết hạn</span>
                            }
                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-6">
                                <a asp-area="" asp-controller="LotterySpecial" asp-action="EditProgram" asp-route-id=@item.ID class="btn btn-success m-1"><i class="far fa-edit"></i> Sửa</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" asp-area="" asp-controller="LotterySpecial" asp-action="DeleteProgram" asp-route-id= class="btn btn-danger m-1"><i class="far fa-trash-alt"></i> Xóa</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</form>