@model CRMManager.Models.LotterySpecialResultsViewModel
<form method="post">
    <div class="ml-5 mr-5 mt-4">
        <div class="row mb-2">
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label">Cửa hàng</label>
                    <select id="drpEmpList" class="form-select" asp-for="ProgramID" asp-items="@(new SelectList(Model.LotterySpecialPrograms, "ID", "Name"))">
                        <option value="">--Select--</option>
                    </select>
                    <input type="hidden" asp-for="ProgramID" />
                </div>
                <div class="form-group">
                    <label class="control-label">Cửa hàng</label>
                    <select id="drpEmpList" class="form-select" asp-for="GiftID" asp-items="@(new SelectList(Model.LotterySpecialGifts, "ID", "Name"))">
                        <option value="">--Select--</option>
                    </select>
                    <input type="hidden" asp-for="GiftID" />
                </div>
            </div>
            <div class="col-6">
                
            </div>
        </div>
        <table id="table-data" class="table table-bordered table-hover table-apptech mt-4 w-100" border="1">
            <thead>
                <tr style="color: White; background-color: #4267B2;">
                    <td style="width:10%;"><b>Mã thành viên</b></td>
                    <td style="width:10%;"><b>Họ tên</b></td>
                    <td style="width:10%;"><b>SDT</b></td>
                    <td style="width:10%;"><b>Email</b></td>
                    <td style="width:10%;"><b>Ngày giao dịch</b></td>
                    <td style="width:10%;"><b>Mã Bill</b></td>
                    <td style="width:10%;"><b>Cửa hàng</b></td>
                    <td style="width:10%;"><b>Tổng tiền giao dịch</b></td>
                    <td style="width:10%;"><b>Mã tham gia</b></td>
                    <td style="width:10%;"><b>Tùy chọn</b></td>
                </tr>
            </thead>
            @foreach (var item in Model.LotterySpecialResults)
            {
                foreach (var item2 in Model.Customers)
                {
                    if (item.MemID == item2.MemID)
                    {
                        <tr id="controlRow" runat="server" class="apptech-pull-up">
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item2.MemID
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item2.FullName
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item2.Mobile
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item2.Email
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item.TransDate
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                    @item.BillID
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                </div>
                            </td>
                            <td>
                                <div class="d-block w-100 h-100 text-decoration-none text-dark p-10px">
                                </div>
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-6">
                                        <a asp-area="" asp-controller="LotterySpecial" asp-action="Detail" asp-route-id=@item.ID class="btn btn-success m-1"><i class="far fa-eye"></i> Xem</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            }
        </table>
    </div>
</form>