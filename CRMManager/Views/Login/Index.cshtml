<style>
    body {
        overflow-x: hidden;
        overflow-y: hidden;
    }

    .login {
        border-radius: 50%;
    }

        .login .title {
            font-family: 'Mulish', sans-serif;
        }

    .round-logo {
        width: 100px;
        height: 100px;
        margin: 10px auto;
    }

        .round-logo img {
            width: 100%;
            height: auto;
            border-radius: 50%;
        }

    .login {
        height: 100vh;
    }

        .login .left {
            background-color: #3F72AF;
            padding: 0px;
            height: 100vh;
            background-image: url('./img/Logo/crm.jpg');
            /*background-image: url('./img/Logo/customer-relationship-management.png');*/
            /*background-image: url('./img/Logo/customer_loyalty_set_2.jpg');*/
            background-size: 500px 400px;
            background-repeat: no-repeat;
            background-position: center;
        }

        .login .right {
            background-color: #F9F7F7;
            padding: 0px;
            height: 100vh;
            display: flex;
        }

            .login .right .card {
                height: 400px;
                width: 35vw;
                margin: auto;
            }

    .card-body .form-group {
        width: 75%;
        margin: auto;
    }

        .card-body .form-group input {
            color: #999B84;
            border-color: #d7d3d3 !important;
            border: solid 2px;
        }

            .card-body .form-group input::placeholder {
                color: #999B84;
            }

    .right-inner-addon {
        position: relative;
    }

        .right-inner-addon input {
            padding-right: 30px;
        }

        .right-inner-addon i {
            position: absolute;
            right: 0px;
            padding: 10px 12px;
            pointer-events: none;
            color: #999B84;
        }

    .btn-login {
        background-color: #DBE2EF;
        color: #3F72AF;
    }

