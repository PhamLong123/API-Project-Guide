        .card-body .form-group {
            width: 100%;
        }
    }

    /*`lg` applies to medium devices (tablets, less than 992px)*/
    @@media (max-width: 991.98px) {
        .login .left {
            display: none;
        }

        .login .right .card {
            width: 80%;
        }

        .card-body .form-group {
            width: 80%;
        }
    }

