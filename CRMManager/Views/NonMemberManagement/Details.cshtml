@model CRMManager.Models.NonMemberViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <form asp-action="Search" method="post">
        <div class="row">
            <div class="col-3">
                <input asp-for="MemIDSearch" class="form-control" placeholder="MemID" />
                <span asp-validation-for="MemIDSearch" class="text-danger"></span>
            </div>
            <div class="col-3">
                <input asp-for="MobileSearch" class="form-control" placeholder="Mobile" />
                <span asp-validation-for="MobileSearch" class="text-danger"></span>
            </div>
            <div class="col-3">
                <input asp-for="FullNameSearch" class="form-control" placeholder="Full Name" />
                <span asp-validation-for="FullNameSearch" class="text-danger"></span>
            </div>
            <div class="col-3">
                <button class="btn btn-success" type="submit">Tìm kiếm</button>
            </div>
        </div>
    </form>
</div>
<h2 class="page-title">@Model.PageTitle</h2>
<hr />


<h4 class="pt-3">FullName: @Model.FullName - MemID: @Model.MemID - DateJoined: @Model.DateJoined</h4>
<div class="row mt-3">
    <div class="col-md-4 border-end">
        <form asp-action="Edit" method="post">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="LastName" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="MiddleName" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="MiddleName" class="form-control" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="FirstName" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Mobile" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Provinces" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <select class="form-select bootstrap-select" form-s aria-label="Default select example">
                                    @if (Model.Provinces != null)
                                    {
                                        @foreach (var item in Model.Provinces)
                                        {
                                            <option value=@item>@item</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Districts" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <select class="form-select bootstrap-select" form-s aria-label="Default select example">
                                    @if (Model.Districts != null)
                                    {
                                        @foreach (var item in Model.Districts)
                                        {
                                            <option value=@item>@item</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Address" class="control-label"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-end crud-button ">
                        <input type="submit" value="Lưu" asp-action="Edit" class="btn btn-success" />
                        <input type="button" value="Hủy" class="btn btn-danger" onclick="location.href = '@Url.Action("Index", "CustomerManagement")'" />
                    </div>
                </div>
            </div>
        </form>

    </div>
    <div class="col-md-8">
