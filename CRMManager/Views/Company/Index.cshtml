@{
    ViewData["Title"] = Model.PageTitle;
}
@model CRMManager.Models.CompanyViewModel
<div class="justify-content-center">
    <h2 class="text-center">@Model.PageTitle</h2>
</div>
<div>
    <form method="post" class="m-2">
        <div class="form-group d-none">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" />
            <input asp-for="CreatedBy" class="form-control" />
            <input asp-for="CreatedOn" class="form-control" />
            <input asp-for="ModifiedBy" class="form-control" />
            <input asp-for="ModifiedOn" class="form-control" />
            <input asp-for="PageTitle" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        @if (!String.IsNullOrEmpty(Model.ErrorMasage))
        {
            <div class="form-group @(Model.IsChanged == true ? "success-box" : "error-box")">
                <div class="error-text">
                    <label class="control-label"><i class="far @(Model.IsChanged == true ? "fa-check-circle" : "fa-times-circle")"></i> @Model.ErrorMasage</label>
                </div>
            </div>
        }
        <div class="card w-100">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label">Mã <span style="color:red;">(*)</span></label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tên <span style="color:red;">(*)</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Điện thoại cố định</label>
                            <input asp-for="PhoneNo" class="form-control" />
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fax</label>
                            <input asp-for="Fax" class="form-control" />
                            <span asp-validation-for="Fax" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label">Website</label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Facebook</label>
                            <input asp-for="Facebook" class="form-control" />
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Instagram</label>
                            <input asp-for="Instagram" class="form-control" />
                            <span asp-validation-for="Instagram" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mã thẻ</label>
                            <input asp-for="CardCode" class="form-control" />
                            <span asp-validation-for="CardCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Địa chỉ</label>
                            <input asp-for="FullAddress" class="form-control" />
                            <span asp-validation-for="FullAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="control-label">Giới thiệu</label>
                            <textarea asp-for="AboutCompany" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="AboutCompany" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-8">

                            </div>
                            <div class="col-4">
                                <div class="float-right mt-2">
                                    <a href='javascript:history.go(-1)' class="btn btn-danger m-1 float-right"><i class="fas fa-times"></i> Hủy</a>
                                    <button type="submit" asp-area="" asp-controller="Company" asp-action="Edit" asp-route-id=@Model class="btn btn-success m-1 float-right"><i class="far fa-save"></i> Lưu</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>